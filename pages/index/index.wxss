#chatApp {
    display: flex;
    flex-direction: column;
    height: 100vh;
}
#chatBody {
    position: relative;
    flex: 1;
    background-color: #E8F9F6;
}
#chatList {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 16px;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}
#chatList::-webkit-scrollbar {
    display: none;
}
.msg {
    display: flex;
    margin-bottom: 20px;
}
.msg > text {
    position: relative;
    display: inline-block;
    max-width: 60%;
    padding: 9px 14px;
    border-radius: 8px;
}
.msg-johnny > text {
    background: #fff;
}
.msg-johnny > text::after {
    position: absolute;
    top: 8px;
    left: -16px;
    display: block;
    content: "";
    border: 10px solid transparent;
    border-right: 10px solid #fff;
}
.msg-guest {
    flex-direction: row-reverse;
}
.msg-guest > text {
    color: #fff;
    background: #3FD1E1;
}
.msg-guest > text::after {
    position: absolute;
    top: 8px;
    right: -16px;
    display: block;
    content: "";
    border: 10px solid transparent;
    border-left: 10px solid #3FD1E1;
}
#chatFooter {
    padding: 18px 25px;
}